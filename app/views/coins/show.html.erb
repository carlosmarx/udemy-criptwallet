<p id="notice"><%= notice %></p>


<table class="table table-hover table-bordered">
<tr>
  <td width="25%"> <%= @coin.class.human_attribute_name(:description) %> </td>
  <td><%= @coin.description %></td>
</tr>

<tr>
  <td width="25%"><%= @coin.class.human_attribute_name(:acronym) %>:</td>
  <td><%= @coin.acronym %></td>
</tr>

<tr>
  <td width="25%"><%= @coin.class.human_attribute_name(:url_image) %>:</td>
  <td><%= image_tag @coin.url_image, size: "25" %></td>
</tr>

<tr>
  <td width="25%"><%= @coin.class.human_attribute_name(:mining_type_id) %></td>
  <td><%= @coin.mining_type.description %></td>
</tr>

</table> 


<%= link_to t('links.edit'), edit_coin_path(@coin), class:"btn btn-info" %>
<%= link_to t('links.back'), coins_path, class:"btn btn-danger" %>
